<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kaymattern.notus.views.MarkOverview">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label accessibleRole="BUTTON" layoutX="585.0" layoutY="10.0" onMouseClicked="#back" text="&lt;" textFill="#00aaff">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <tooltip>
                        <Tooltip text="Zurück">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                  </Label>
                  <Label fx:id="titleLabel" text="Notenübersicht">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label accessibleRole="BUTTON" onMouseClicked="#add" text="+" textFill="#00aaff">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <tooltip>
                        <Tooltip text="Note hinzufügen">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <Label text="Noten">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TableView fx:id="marksTable" prefHeight="200.0" prefWidth="200.0">
              <placeholder>
                <Label text="Keine Noten vorhanden. Füge neue Noten mit dem Plus-Button hinzu." />
              </placeholder>
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Datum" />
                  <TableColumn fx:id="markColumn" prefWidth="75.0" text="Note" />
                  <TableColumn fx:id="weightColumn" prefWidth="75.0" text="Gewichtung" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </TableView>
            <HBox style="-fx-background-color: #eeee; -fx-border-color: #1f1f1f; -fx-border-radius: 8;">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <Label text="Durchschnitt:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="averageLabel" layoutX="20.0" layoutY="20.0" text="NaN Ø">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
