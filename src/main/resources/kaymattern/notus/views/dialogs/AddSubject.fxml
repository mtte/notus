<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kaymattern.notus.views.dialogs.AddSubject">
   <children>
      <VBox prefHeight="200.0" prefWidth="400.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Fach hinzufügen">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="25.0">
               <children>
                  <Label text="Name:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTextField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Region layoutX="10.0" layoutY="55.0" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#add" text="Hinzufügen" />
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#close" text="Abbrechen" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
